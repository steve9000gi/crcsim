#!/bin/bash

#set -x
set -e

###################################################################
###################################################################
##    
##    
## Command line interface for interacting with RTI synthetic
## population and associated PUMS (census) data.
##
## usage:
##    
##    install: download data files, import, and export.
##
##          ./generate-population --install
##
##    clean: delete all data files.
##
##          ./generate-population --clean
##
##    import: load raw synthetic population and pums data into database.
##
##          ./generate-population --import
##
##    export: select custom format from database.
##
##          ./generate-population --export
##
## confiugration:
##
##    synth_data_home: directory in which the synthetic population
##                     files are stored.
##
##    input_files: files to be imported. 
##
##
##
## requires sqlite3, wget and unzip commands.
##
##
###################################################################

configure_system () {    
    #APP_HOME=/cygdrive/c/scox/dev/  # blueridge largemem
    APP_HOME=/cygdrive/c/dev         # x301 largemem-0-1 and STEVE-W510
    #APP_HOME=~/dev/                 # scox.europa.renci.org

    DATA_HOME=$APP_HOME/var/crcsim
    synth_data_home=$APP_HOME/var/crcsim/rti/syntheticpopulation2010 # SAC

    #DATABASE=$(cygpath -w $APP_HOME/var/crcsim/generated/population.db)
    DATABASE=$APP_HOME/var/crcsim/generated/population.db

    input_files="
2010_ver1_37_synth_people.txt 
2010_ver1_37_pums_p.txt
2010_ver1_37_clean_synth_zips_households.txt"
#2010_ver1_37_synth_zips_households.txt"
    unset subset
    unset tables
    unset cygwin    
    if [ "$(uname -o)" == 'Cygwin' ]
    then 
	cygwin=true
    fi
}

get_fields () {
    local input=$1
    echo " $(head -1 $input | sed -e 's/,/ varchar\(10\)\n,/g' ) varchar(10) "
}

execute_sql () {
    sqlite3 $DATABASE <<SQL_ENTRY_TAG_1
$1
SQL_ENTRY_TAG_1
}

drop_tables () {
    for table in $*; do
	exists=$( execute_sql "SELECT name FROM sqlite_master WHERE type='table' and name = '$table';" )
	if [ ! -z "$exists" ]; then
	    execute_sql "drop table $table;"
	fi
    done
}

create_table () {
    local input=$1
    local table=$2
    fields="$(get_fields $input)"
    # echo "!!! create_table; input = " $input "; table = " $table # SAC
    # echo "fields: " $fields # SAC
    sql="create table $table ($fields);"
    execute_sql "$sql"
}

load_data () {
    local input=$1
    if [ ! -z $cygwin ]; then
	input=$(cygpath -w $1)
    fi
    local table=$2
    cat > sqlgen-${table}-loader.txt <<EOF
.mode csv
.schema $table
.import '$input' $table
EOF
    sqlite3 $DATABASE ".read sqlgen-${table}-loader.txt" > sqlgen-${table}-loader.log
}

create_and_load () {
    local input=$1
    local table=$2
    create_table $input $table
    load_data $input $table
}    

import_tables () {
    for file in $input_files; do        
	table=$(echo $file | sed -e "s,pums_,pums,g" | sed -e "s,.*_,," -e "s,.txt,,")
	table="$table:${synth_data_home}/$file"
	tables="$tables $table"
    done
    echo importing $tables
    
    echo "  drop: $input $table"
    drop_tables people households pumsp zipcode
    for table in $tables; do
	input=$(echo $table | sed -e "s,:, ," | awk '{ print $2 }')
	table=$(echo $table | sed -e "s,:, ," | awk '{ print $1 }')
        echo "  import: $input $table"
	create_and_load $input $table
    done
}

export_data () {
    echo "people.p_id|people.sex|people.race|households.hh_income|people.age|households.hh_size|households.latitude|households.longitude|households.stcotrbg|pumsp.hisp|pumsp.schl|pumsp.semp|pumsp.rac1p"
    execute_sql "
  select people.p_id,
         people.sex,
         people.race,
         households.hh_income,
         people.age,
         households.hh_size,
         households.latitude,
         households.longitude,
         households.stcotrbg,
         pumsp.hisp,
         pumsp.schl,
         pumsp.semp,
         pumsp.rac1p
  from people,
       households,
       pumsp
  where people.hh_id    == households.hh_id
    and people.serialno == pumsp.serialno
    and people.pernum   == pumsp.sporder;
" 
}

export_data_by_age () {
    local AGE=$1
    echo "people.p_id|people.sex|people.race|households.hh_income|people.age|households.hh_size|households.latitude|households.longitude|zipcode.zipcode|households.stcotrbg|pumsp.mar|pumsp.hisp|pumsp.schl|pumsp.semp|pumsp.rac1p"
    execute_sql "
  select people.sp_id,
         people.sex,
         people.race,
         households.hh_income,
         people.age,
         households.hh_size,
         households.latitude,
         households.longitude,
         households.zip,
         households.stcotrbg,
         pumsp.mar,
         pumsp.hisp,
         pumsp.schl,
         pumsp.semp,
         pumsp.rac1p
  from people,
       households,
       pumsp
  where people.age      == '${AGE}'
    and people.sp_hh_id == households.sp_id
    and people.serialno == pumsp.serialno
    and people.sporder  == pumsp.sporder;
" 
}

#  where stcotrbg like '37193%';

install_data () {
    mkdir -p $APP_HOME/var/crcsim

    cd $APP_HOME/var/crcsim
    if [ ! -d census2010 ]; then
	wget --timestamping http://www.renci.org/~scox/crc/data/crcsim-data-1.0.tar.gz
    fi

    if [ ! -d census2010 ]; then
	tar xvzf crcsim-data-1.0.tar.gz
    fi

    cd census2010
    if [ ! -f tl_2010_37_county10.dbf ]; then
	for z in $(ls *.zip); do
	    unzip $z
	done
    fi

    cd ../rti/syntheticpopulation
    if [ ! -f 2005_2009_ver1_37_synth_people.txt ]; then
	for z in $(ls *.zip); do
	    unzip $z
	done
    fi

    cd $APP_HOME/crcsim/
    database=$APP_HOME/var/crcsim/generated/population.db
    exportFile=$APP_HOME/var/crcsim/generated/syntheticpopulation.out
    if [ ! -f $database ]; then
	$0 --database=$database --import
    fi
    if [ ! -f $exportFile ]; then
	$0 --database=$database --export > $exportFile
    fi

    cd $APP_HOME/crcsim
    mvn --settings=conf/settings.xml
}

usage () {
    echo "$0 [ --import | --export ]"
    exit 1
}

getarg () {
    echo $1 | sed s,.*=,,
}

main () {

	unset MIN_AGE
	unset MAX_AGE

	configure_system
	for arg in $*; do
	    case $arg in
		--database\=*)
		    DATABASE=$(getarg $arg)
		    ;;
		'--import')
		    import_tables
		    ;;
		'--export')
		    if [ -z $MIN_AGE -a -z $MAX_AGE ]; then
			export_data
		    else
			for age in $(seq $MIN_AGE $MAX_AGE); do
                            echo exporting cohort $age...
			    export_data_by_age $age > $APP_HOME/var/crcsim/generated/exports/export.$age
			done
		    fi
		    ;;
		--minage\=*)
		    MIN_AGE=$(getarg $arg)
		    ;;
		--maxage\=*)
		    MAX_AGE=$(getarg $arg)
		    ;;
		'--install')
		    install_data
		    ;;
		'--clean')
		    rm -rf $DATA_HOME
		    ;;
		*)
		    echo unknown argument $arg 
		    usage 
		    ;;
	    esac
	done
	rm -rf sqlgen-*
}

main $*
